{
  "name": "ai-dungeon-master",
  "version": "1.0.0",
  "description": "AI-Enhanced Dungeon Master Game - Classic dungeon crawler with modern AI assistance",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && node fix-imports.js",
    "build:prod": "npm run build && node optimize-build.js",
    "serve": "http-server . -p 8080 -c-1 --cors",
    "start": "npm run build && npm run serve",
    "deploy:netlify": "npm run build:prod && echo 'Ready for Netlify deployment'",
    "deploy:vercel": "node optimize-build.js && vercel --prod",
    "deploy:surge": "npm run build:prod && surge . ai-dungeon-master.surge.sh",
    "server:dev": "cd server && npm run dev",
    "server:build": "cd server && npm run build",
    "server:start": "cd server && npm start",
    "setup:backend": "node setup-backend.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:properties": "jest --testPathPattern=properties",
    "test:performance": "jest --testPathPattern=performance",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "game",
    "dungeon-crawler",
    "ai",
    "retro",
    "typescript"
  ],
  "author": "AI Dungeon Master Team",
  "license": "MIT",
  "dependencies": {
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "fast-check": "^3.15.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "typescript-transform-paths": "^3.5.5"
  }
}
